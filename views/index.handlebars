
<h1>Burgers!</h1>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      
      {{> burgers/burgerblock devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
  {{#each burger}}
    {{#if devoured}}
        {{> burgers/burgerblock devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bur">Burger name</label>
    <input type="text" id="bur" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>